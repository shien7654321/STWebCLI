{
    "name": "st-web-cli-template",
    "version": "1.0.0",
    "main": "src/main.ts",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shien7654321/STWebCLI.git#tpl-vue3-webpack-ssr"
    },
    "scripts": {
        "build": "yarn build:client && yarn build:server && yarn build:node",
        "build:client": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.prod.ts",
        "build:server": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.server.ts",
        "build:node": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.node.ts",
        "ssr": "nodemon dist/node/server.js --config nodemon.json",
        "dev": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack serve --progress --config build/webpack.dev.ts",
        "dev:ssr": "nodemon server/devSSR.ts --config nodemon.json",
        "lint": "eslint --fix \"src/**/*.{vue,js,ts,jsx,tsx}\"",
        "lint-style": "stylelint --fix \"src/**/*.{html,vue,css,less,sass,scss,styl,stylus,jsx,tsx}\"",
        "prettier": "prettier --write \"src\""
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "engines": {
        "node": ">= 14.0.0",
        "npm": ">= 6.0.0"
    },
    "dependencies": {
        "@vue/server-renderer": "^3.3.4",
        "chalk": "4.1.2",
        "express": "^4.18.2",
        "vue": "^3.3.4",
        "vue-router": "^4.2.5"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.22.20",
        "@babel/register": "^7.22.15",
        "@types/node": "^20.8.3",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "@vue/babel-plugin-jsx": "^1.1.5",
        "@vue/compiler-sfc": "^3.3.4",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "compression-webpack-plugin": "^10.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.8.1",
        "css-minimizer-webpack-plugin": "^5.0.1",
        "eslint": "^8.51.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-vue": "^9.17.0",
        "html-webpack-plugin": "^5.5.3",
        "less": "^4.2.0",
        "less-loader": "^11.1.3",
        "memory-fs": "^0.5.0",
        "mini-css-extract-plugin": "^2.7.6",
        "nodemon": "^3.0.1",
        "null-loader": "^4.0.1",
        "postcss": "^8.4.31",
        "postcss-html": "^1.5.0",
        "postcss-less": "^6.0.0",
        "postcss-loader": "^7.3.3",
        "postcss-sass": "^0.5.0",
        "postcss-scss": "^4.0.9",
        "postcss-styl": "^0.12.3",
        "prettier": "^3.0.3",
        "process": "^0.11.10",
        "sass": "^1.69.0",
        "sass-loader": "^13.3.2",
        "stylelint": "^15.10.3",
        "stylelint-config-recess-order": "^4.3.0",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard": "^34.0.0",
        "stylelint-stylus": "^0.18.0",
        "stylus": "^0.60.0",
        "stylus-loader": "^7.1.3",
        "terser-webpack-plugin": "^5.3.9",
