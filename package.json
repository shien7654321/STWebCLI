{
    "name": "st-web-cli-template",
    "version": "1.0.0",
    "main": "src/main.ts",
    "license": "MIT",
    "scripts": {
        "build": "yarn build:client && yarn build:server && yarn build:node",
        "build:client": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.prod.ts",
        "build:server": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.server.ts",
        "build:node": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.node.ts",
        "ssr": "nodemon dist/node/server.js",
        "dev": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack serve --progress --config build/webpack.dev.ts",
        "dev:ssr": "nodemon server/devSSR.ts",
        "lint": "eslint --fix \"src/**/*.{vue,js,ts,jsx,tsx}\"",
        "lint-style": "stylelint --fix \"src/**/*.{html,vue,css,less,sass,scss,styl,jsx,tsx}\"",
        "prettier": "prettier --write \"src\""
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "engines": {
        "node": ">= 16.0.0",
        "npm": ">= 6.0.0"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "express": "^4.18.1",
        "vue": "^3.2.37",
        "vue-router": "^4.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.18.9",
        "@babel/preset-env": "^7.18.9",
        "@babel/register": "^7.18.9",
        "@types/node": "^18.6.1",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@vue/babel-plugin-jsx": "^1.1.1",
        "@vue/compiler-sfc": "^3.2.37",
        "autoprefixer": "^10.4.7",
        "babel-loader": "^8.2.5",
        "compression-webpack-plugin": "^10.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^4.0.0",
        "eslint": "^8.20.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-vue": "^9.3.0",
        "html-webpack-plugin": "^5.5.0",
        "less": "^4.1.3",
        "less-loader": "^11.0.0",
        "memory-fs": "^0.5.0",
        "mini-css-extract-plugin": "^2.6.1",
        "nodemon": "^2.0.19",
        "null-loader": "^4.0.1",
        "postcss": "^8.4.14",
        "postcss-html": "^1.5.0",
        "postcss-less": "^6.0.0",
        "postcss-loader": "^7.0.1",
        "prettier": "^2.7.1",
        "process": "^0.11.10",
        "stylelint": "^14.9.1",
        "stylelint-config-recommended-vue": "^1.4.0",
        "stylelint-config-standard": "^26.0.0",
        "terser-webpack-plugin": "^5.3.3",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "uglify-js": "^3.16.3",
        "vue-loader": "^17.0.0",
        "vue-style-loader": "^4.1.3",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-middleware": "^5.3.3",
        "webpack-dev-server": "^4.9.3",
        "webpack-hot-middleware": "^2.25.1",
        "webpack-manifest-plugin": "^5.0.0",
        "webpack-merge": "^5.8.0",
        "webpack-node-externals": "^3.0.0"
    }
