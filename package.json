{
  "name": "st-web-cli-template",
  "version": "1.0.0",
  "main": "src/bin/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shien7654321/STWebCLI.git#tpl-node"
  },
  "scripts": {
    "build": "rimraf ./dist && tsc && cp -RP ./node_modules ./dist/node_modules && cp ./package.json ./dist/package.json",
    "build-minify": "rimraf ./dist && ncc build -m -s -t --no-source-map-register src/bin/index.ts -o dist",
    "dev": "cross-env NODE_ENV=development nodemon",
    "lint": "eslint --fix",
    "prettier": "prettier --write \"src\""
  },
  "engines": {
    "node": ">= 18.0.0",
    "npm": ">= 10.0.0"
  },
  "dependencies": {
    "module-alias": "^2.2.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vercel/ncc": "^0.38.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
