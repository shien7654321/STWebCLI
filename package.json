{
    "name": "st-web-cli-template",
    "version": "1.0.0",
    "main": "src/main.ts",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shien7654321/STWebCLI.git#tpl-vue3-webpack-ssr"
    },
    "scripts": {
        "build": "yarn build:client && yarn build:server && yarn build:node",
        "build:client": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.prod.ts",
        "build:server": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.server.ts",
        "build:node": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack --progress --config build/webpack.node.ts",
        "ssr": "nodemon dist/node/server.js --config nodemon.json",
        "dev": "TS_NODE_PROJECT=\"build/webpack.tsconfig.json\" webpack serve --progress --config build/webpack.dev.ts",
        "dev:ssr": "nodemon server/devSSR.ts --config nodemon.json",
        "lint": "eslint --fix \"src/**/*.{vue,js,ts,jsx,tsx}\"",
        "lint-style": "stylelint --fix \"src/**/*.{html,vue,css,less,sass,scss,styl,stylus,jsx,tsx}\"",
        "prettier": "prettier --write \"src\""
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ],
    "engines": {
        "node": ">= 14.0.0",
        "npm": ">= 6.0.0"
    },
    "dependencies": {
        "@vue/server-renderer": "^3.4.21",
        "chalk": "4.1.2",
        "express": "^4.19.2",
        "vue": "^3.4.21",
        "vue-router": "^4.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.24.3",
        "@babel/preset-env": "^7.24.3",
        "@babel/register": "^7.23.7",
        "@types/node": "^20.12.2",
        "@typescript-eslint/eslint-plugin": "5.62.0",
        "@typescript-eslint/parser": "5.62.0",
        "@vue/babel-plugin-jsx": "^1.2.2",
        "@vue/compiler-sfc": "^3.4.21",
        "autoprefixer": "^10.4.19",
        "babel-loader": "^9.1.3",
        "compression-webpack-plugin": "^11.1.0",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.10.0",
        "css-minimizer-webpack-plugin": "^6.0.0",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-vue": "^9.24.0",
        "html-webpack-plugin": "^5.6.0",
        "less": "^4.2.0",
        "less-loader": "^12.2.0",
        "memory-fs": "^0.5.0",
        "mini-css-extract-plugin": "^2.8.1",
        "nodemon": "^3.1.0",
        "null-loader": "^4.0.1",
        "postcss": "^8.4.38",
        "postcss-html": "^1.6.0",
        "postcss-less": "^6.0.0",
        "postcss-loader": "^8.1.1",
        "postcss-sass": "^0.5.0",
        "postcss-scss": "^4.0.9",
        "postcss-styl": "^0.12.3",
        "prettier": "^3.2.5",
        "process": "^0.11.10",
        "sass": "^1.72.0",
        "sass-loader": "^14.1.1",
        "stylelint": "15.11.0",
        "stylelint-config-recess-order": "4.6.0",
        "stylelint-config-recommended-vue": "^1.5.0",
        "stylelint-config-standard": "35.0.0",
        "stylus": "^0.63.0",
        "stylus-loader": "^8.1.0",
        "terser-webpack-plugin": "^5.3.10",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2",
        "typescript": "^5.4.3",
        "uglify-js": "^3.17.4",
        "vue-loader": "^17.4.2",
        "vue-style-loader": "^4.1.3",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-middleware": "6.1.1",
        "webpack-dev-server": "4.15.1",
        "webpack-hot-middleware": "^2.26.1",
